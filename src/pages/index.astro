---
import { getCollection } from 'astro:content';

// Get all posts
const allPosts = await getCollection('posts', ({ data }) => {
    // Filter out draft posts if you have a draft field
    // return data.draft !== true;
    return true; // Assuming all posts in the collection are to be included
});

// Sort posts by publishDate in descending order
const sortedPosts = allPosts.sort((a, b) => new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime());

// Get the latest 3 posts
const latestPosts = sortedPosts.slice(0, 3);

// Feature the latest post
const featuredPost = sortedPosts[0];
---

<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Skill-Wanderer</title>
    <style>
        .nav-link {
            @apply px-4 py-2 transition-colors text-skill-wanderer-text-dark-secondary;
        }
        .nav-link:hover {
            @apply text-skill-wanderer-primary-orange;
        }
        .btn-primary {
            @apply font-semibold py-2 px-6 rounded-lg transition-colors bg-skill-wanderer-primary-orange text-skill-wanderer-text-dark;
        }
        .btn-primary:hover {
            @apply bg-skill-wanderer-light-orange;
        }
        .topic-btn {
            @apply font-medium py-2 px-5 rounded-lg transition-colors bg-skill-wanderer-secondary-dark text-skill-wanderer-text-dark-secondary;
        }
        .topic-btn:hover {
            @apply bg-skill-wanderer-card-dark text-skill-wanderer-text-dark;
        }
        .card-dark {
            @apply bg-skill-wanderer-card-dark border border-dark;
        }
        .card-light {
            @apply bg-skill-wanderer-white border border-light shadow-light;
        }
    </style>
</head>
<body class="min-h-screen bg-skill-wanderer-primary-dark text-skill-wanderer-text-dark">
    <!-- Header -->
    <header class="bg-skill-wanderer-darkest border-b border-dark">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8 flex justify-between items-center h-20">
            <div class="text-2xl font-bold text-skill-wanderer-primary-orange">
                SKILL-WANDERER
            </div>
            <nav class="hidden md:flex items-center space-x-2">
                <a href="#" class="nav-link">Latest</a>
                <a href="#" class="nav-link">Featured</a>
                <a href="#" class="nav-link">Categories</a>
                <a href="#" class="nav-link">About</a>
                <a href="#" class="btn-primary ml-4">Subscribe</a>
            </nav>
            <div class="md:hidden">
                <!-- Mobile menu button -->
                <button class="text-skill-wanderer-text-dark-secondary hover:text-skill-wanderer-primary-orange focus:outline-none">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path></svg>
                </button>
            </div>
        </div>
    </header>

    <!-- Hero Section -->
    <main class="container mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-20 text-center">
        <h1 class="text-5xl md:text-6xl font-bold mb-6 text-skill-wanderer-text-dark">
            The Skill-Wanderer Blog
        </h1>
        <p class="text-xl md:text-2xl mb-8 max-w-3xl mx-auto text-skill-wanderer-text-dark-secondary">
            Insights from My Tech Journey
        </p>
        <p class="text-lg max-w-2xl mx-auto text-skill-wanderer-text-dark-muted">
            Join me on my learning journey as I share insights from exploring various tech
            domains, building projects, and navigating the ever-evolving landscape of software
            development.
        </p>
    </main>

    <!-- Explore Topics Section -->
    <section class="py-12 md:py-16 bg-skill-wanderer-light-gray">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <h2 class="text-3xl font-semibold mb-8 text-skill-wanderer-text-light">Explore Topics</h2>
            <div class="flex flex-wrap justify-center gap-4">
                <button class="btn-primary">All Posts</button>
                <button class="px-5 py-2 rounded-lg font-medium transition-colors bg-skill-wanderer-white text-skill-wanderer-text-light-secondary border border-light hover:bg-skill-wanderer-light-gray hover:text-skill-wanderer-text-light">Development</button>
                <button class="px-5 py-2 rounded-lg font-medium transition-colors bg-skill-wanderer-white text-skill-wanderer-text-light-secondary border border-light hover:bg-skill-wanderer-light-gray hover:text-skill-wanderer-text-light">Architecture</button>
                <button class="px-5 py-2 rounded-lg font-medium transition-colors bg-skill-wanderer-white text-skill-wanderer-text-light-secondary border border-light hover:bg-skill-wanderer-light-gray hover:text-skill-wanderer-text-light">DevOps</button>
                <button class="px-5 py-2 rounded-lg font-medium transition-colors bg-skill-wanderer-white text-skill-wanderer-text-light-secondary border border-light hover:bg-skill-wanderer-light-gray hover:text-skill-wanderer-text-light">Leadership</button>
                <button class="px-5 py-2 rounded-lg font-medium transition-colors bg-skill-wanderer-white text-skill-wanderer-text-light-secondary border border-light hover:bg-skill-wanderer-light-gray hover:text-skill-wanderer-text-light">Career</button>
                <button class="px-5 py-2 rounded-lg font-medium transition-colors bg-skill-wanderer-white text-skill-wanderer-text-light-secondary border border-light hover:bg-skill-wanderer-light-gray hover:text-skill-wanderer-text-light">Learning</button>
            </div>
        </div>
    </section>

    <!-- Placeholder for Featured Posts -->
    <section class="py-12 md:py-16 bg-skill-wanderer-primary-dark">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
            <h2 class="text-3xl font-semibold mb-8 text-center md:text-left text-skill-wanderer-text-dark">Featured Post</h2>
            <div class="grid md:grid-cols-1 gap-8"> {/* Changed to grid-cols-1 for a single featured post */}
                {featuredPost && (
                    <a href={`/blog/${featuredPost.slug}/`} class="block card-dark rounded-lg overflow-hidden group hover:shadow-xl transition-shadow duration-300">
                        <div class="md:flex">
                            {featuredPost.data.image && (
                                <div class="md:w-1/2">
                                    <img src={featuredPost.data.image} alt={featuredPost.data.title} class="w-full h-64 md:h-full object-cover group-hover:scale-105 transition-transform duration-300" />
                                </div>
                            )}
                            <div class:list={["p-6 md:p-8 flex flex-col justify-center", featuredPost.data.image ? "md:w-1/2" : "w-full"]}>
                                <p class="text-sm text-skill-wanderer-primary-orange uppercase font-semibold mb-2">{featuredPost.data.category}</p>
                                <h3 class="text-2xl font-bold mb-3 text-skill-wanderer-text-dark group-hover:text-skill-wanderer-primary-orange transition-colors duration-300">{featuredPost.data.title}</h3>
                                <p class="text-skill-wanderer-text-dark-secondary mb-4 text-sm leading-relaxed">{featuredPost.data.description}</p>
                                <div class="mt-auto">
                                    <p class="text-xs text-skill-wanderer-text-dark-muted">{featuredPost.data.readTime}</p>
                                    <p class="text-xs text-skill-wanderer-text-dark-muted">Published on: {new Date(featuredPost.data.publishDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</p>
                                </div>
                            </div>
                        </div>
                    </a>
                )}
                {!featuredPost && (
                    <p class="text-skill-wanderer-text-dark-secondary">No featured posts available at the moment.</p>
                )}
            </div>
        </div>
    </section>

    <!-- Placeholder for Latest Posts -->
    <section class="py-12 md:py-16 bg-skill-wanderer-light-gray">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center mb-8">
                <h2 class="text-3xl font-semibold text-skill-wanderer-text-light">Latest Posts</h2>
                <a href="/blog" class="text-skill-wanderer-primary-orange hover:underline">View All</a>
            </div>
            <div class="grid md:grid-cols-1 lg:grid-cols-3 gap-8">
                {latestPosts.length > 0 ? (
                    latestPosts.map(post => (
                        <a href={`/blog/${post.slug}/`} class="block card-light rounded-lg overflow-hidden group hover:shadow-xl transition-shadow duration-300">
                            {post.data.image && (
                                <img src={post.data.image} alt={post.data.title} class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300" />
                            )}
                            <div class="p-6 flex flex-col">
                                <p class="text-xs text-skill-wanderer-primary-orange uppercase font-semibold mb-1">{post.data.category}</p>
                                <h3 class="text-xl font-bold mb-2 text-skill-wanderer-text-light group-hover:text-skill-wanderer-primary-orange transition-colors duration-300">{post.data.title}</h3>
                                <p class="text-skill-wanderer-text-light-secondary text-sm mb-3 leading-relaxed flex-grow">
                                    {post.data.description.slice(0, 100) + (post.data.description.length > 100 ? '...' : '')}
                                </p>
                                <div class="mt-auto">
                                    <p class="text-xs text-skill-wanderer-text-light-secondary">{post.data.readTime}</p>
                                    <p class="text-xs text-skill-wanderer-text-light-secondary">
                                        Published on: {new Date(post.data.publishDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
                                    </p>
                                </div>
                            </div>
                        </a>
                    ))
                ) : (
                    <p class="text-skill-wanderer-text-light-secondary col-span-full text-center">More posts coming soon!</p>
                )}
            </div>
        </div>
    </section>

    <!-- Join the Journey Section -->
    <section class="py-16 md:py-24 bg-skill-wanderer-primary-dark">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <h2 class="text-3xl md:text-4xl font-semibold mb-6 text-skill-wanderer-text-dark">Join the Journey</h2>
            <p class="text-lg mb-8 max-w-xl mx-auto text-skill-wanderer-text-dark-secondary">
                Get weekly insights on development, architecture, and the art of continuous learning.
            </p>
            <form class="max-w-md mx-auto flex gap-3">
                <input type="email" placeholder="Enter your email" 
                       class="flex-grow rounded-lg py-3 px-4 outline-none transition-colors bg-skill-wanderer-secondary-dark text-skill-wanderer-text-dark border border-dark focus:border-skill-wanderer-primary-orange" />
                <button type="submit" class="btn-primary">Subscribe</button>
            </form>
        </div>
    </section>

    <!-- Footer -->
    <footer class="py-8 bg-skill-wanderer-darkest border-t border-dark">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center text-skill-wanderer-text-dark-muted">
            <div class="flex justify-center space-x-6 mb-4">
                <a href="#" class="transition-colors text-skill-wanderer-text-dark-muted hover:text-skill-wanderer-primary-orange">Main Site</a>
                <a href="#" class="transition-colors text-skill-wanderer-text-dark-muted hover:text-skill-wanderer-primary-orange">LinkedIn</a>
                <a href="#" class="transition-colors text-skill-wanderer-text-dark-muted hover:text-skill-wanderer-primary-orange">GitHub</a>
                <a href="#" class="transition-colors text-skill-wanderer-text-dark-muted hover:text-skill-wanderer-primary-orange">Contact</a>
            </div>
            <p>&copy; 2025 Skill-Wanderer. All rights reserved.</p>
        </div>
    </footer>

</body>
</html>
