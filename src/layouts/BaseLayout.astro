---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { optimizeDescriptionLength, generateKeywords, readingTimeToISO8601 } from '../utils/seo.ts';

export interface Props {
  title: string;
  description?: string;
  image?: string;
  keywords?: string;
  author?: string;
  publishDate?: string;
  modifiedDate?: string;
  type?: 'website' | 'article';
  canonicalUrl?: string;
  noindex?: boolean;
  tags?: string[];
  category?: string;
  readTime?: string;
  wordCount?: number;
}

const { 
  title, 
  description = "Join my tech journey exploring software development, programming insights, and innovative solutions. Practical tutorials and real-world experiences.",
  image = "/images/general/skill-wanderer-og-default.jpg", // Default OG image
  keywords = "tech blog, software development, programming, web development, technology insights, coding tutorials",
  author = "Skill-Wanderer",
  publishDate,
  modifiedDate,
  type = "website",
  canonicalUrl,
  noindex = false,
  tags = [],
  category,
  readTime,
  wordCount
} = Astro.props;

// Get the current URL for canonical and og:url
const currentUrl = canonicalUrl || new URL(Astro.url.pathname, Astro.site || 'https://wanderings.skill-wanderer.com').toString();

// Ensure image is absolute URL
const absoluteImageUrl = image.startsWith('http') ? image : new URL(image, Astro.site || 'https://wanderings.skill-wanderer.com').toString();

// Optimize title with site name for better branding (except for home page)
const optimizedTitle = Astro.url.pathname === '/' ? title : `${title} | Skill-Wanderer`;

// Ensure description is within optimal length (150-160 characters)
const optimizedDescription = optimizeDescriptionLength(description);

// Create comprehensive keywords string
const allKeywords = generateKeywords(
  tags,
  category,
  title,
  keywords.split(', ').filter(Boolean)
);

// JSON-LD structured data
const jsonLd = {
  "@context": "https://schema.org",
  "@type": type === "article" ? "BlogPosting" : "WebSite",
  "headline": title,
  "description": optimizedDescription,
  "url": currentUrl,
  "image": {
    "@type": "ImageObject",
    "url": absoluteImageUrl,
    "width": 1200,
    "height": 630
  },
  "author": {
    "@type": "Person",
    "name": author,
    "url": Astro.site || "https://wanderings.skill-wanderer.com"
  },
  "publisher": {
    "@type": "Organization",
    "name": "Skill-Wanderer",
    "url": Astro.site || "https://wanderings.skill-wanderer.com",
    "logo": {
      "@type": "ImageObject",
      "url": new URL("/favicon.svg", Astro.site || "https://wanderings.skill-wanderer.com").toString(),
      "width": 60,
      "height": 60
    }
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": currentUrl
  },
  "inLanguage": "en-US",
  ...(publishDate && {
    "datePublished": publishDate,
    "dateModified": modifiedDate || publishDate
  }),
  ...(type === "article" && {
    "articleSection": category || "Technology",
    "keywords": allKeywords,
    ...(tags && tags.length > 0 && { "about": tags.map(tag => ({ "@type": "Thing", "name": tag })) }),    ...(wordCount && { "wordCount": wordCount }),
    ...(readTime && { 
      "timeRequired": readingTimeToISO8601(readTime)
    })
  }),
  ...(type === "website" && {
    "potentialAction": {
      "@type": "SearchAction",
      "target": {
        "@type": "EntryPoint",
        "urlTemplate": `${Astro.site || "https://wanderings.skill-wanderer.com"}/blog/?search={search_term_string}`
      },
      "query-input": "required name=search_term_string"
    }
  })
};
---

<!DOCTYPE html>
<html lang="en-US">
<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Meta Tags -->
    <title>{optimizedTitle}</title>
    <meta name="description" content={optimizedDescription} />
    <meta name="keywords" content={allKeywords} />
    <meta name="author" content={author} />
    <link rel="canonical" href={currentUrl} />
    {noindex && <meta name="robots" content="noindex, nofollow" />}
    
    <!-- Additional SEO Meta Tags -->
    <meta name="language" content="en-US" />
    <meta name="geo.region" content="US" />
    <meta name="geo.placename" content="United States" />
    <meta name="distribution" content="global" />
    <meta name="rating" content="general" />
    <meta name="revisit-after" content="7 days" />
      <!-- RSS Feed -->
    <link rel="alternate" type="application/rss+xml" title="Skill-Wanderer RSS Feed" href="/rss.xml" />
    
    <!-- Sitemap -->
    <link rel="sitemap" type="application/xml" title="Sitemap" href="/sitemap.xml" />
    
    <!-- Open Graph Meta Tags -->
    <meta property="og:type" content={type} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={optimizedDescription} />
    <meta property="og:image" content={absoluteImageUrl} />
    <meta property="og:url" content={currentUrl} />
    <meta property="og:site_name" content="Skill-Wanderer" />
    <meta property="og:locale" content="en_US" />
    {type === 'article' && (
      <>
        <meta property="og:image:alt" content={title} />
        {tags && tags.length > 0 && tags.map(tag => (
          <meta property="article:tag" content={tag} />
        ))}
        {publishDate && <meta property="article:published_time" content={publishDate} />}
        {(modifiedDate || publishDate) && <meta property="article:modified_time" content={modifiedDate || publishDate} />}
        {category && <meta property="article:section" content={category} />}
        <meta property="article:author" content={author} />
      </>
    )}
    
    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={optimizedDescription} />
    <meta name="twitter:image" content={absoluteImageUrl} />
    <meta name="twitter:image:alt" content={title} />
    <meta name="twitter:creator" content="@skill_wanderer" />
    <meta name="twitter:site" content="@skill_wanderer" />
    <meta name="twitter:domain" content={new URL(currentUrl).hostname} />
      <!-- Performance and Resource Hints -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="dns-prefetch" href="https://www.google-analytics.com" />
    <link rel="dns-prefetch" href="https://fonts.googleapis.com" />
    <link rel="dns-prefetch" href="https://api.github.com" />
    <link rel="preload" href="/favicon.svg" as="image" type="image/svg+xml" />
    
    <!-- Resource hints for better performance -->
    <meta http-equiv="x-dns-prefetch-control" content="on" />
    
    <!-- Optimize image loading -->
    {type === 'article' && image && (
      <link rel="preload" as="image" href={absoluteImageUrl} />
    )}
    
    <!-- Additional Meta Tags -->
    <meta name="theme-color" content="#FF6B35" />
    <meta name="msapplication-TileColor" content="#FF6B35" />
    <meta name="apple-mobile-web-app-title" content="Skill-Wanderer" />
    <meta name="application-name" content="Skill-Wanderer" />
    
    <!-- Additional SEO Meta Tags -->
    <meta name="referrer" content="no-referrer-when-downgrade" />
    <meta name="format-detection" content="telephone=no" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    
    <!-- Dublin Core metadata -->
    <meta name="dc.title" content={title} />
    <meta name="dc.description" content={optimizedDescription} />
    <meta name="dc.creator" content={author} />
    <meta name="dc.language" content="en-US" />
    <meta name="dc.type" content="Text" />
    {publishDate && <meta name="dc.date" content={publishDate} />}
    {category && <meta name="dc.subject" content={category} />}
    
    <!-- Additional Open Graph tags -->
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:type" content="image/jpeg" />
    
    <!-- Security headers via meta tags -->
    <meta http-equiv="X-Content-Type-Options" content="nosniff" />
    <meta http-equiv="Referrer-Policy" content="no-referrer-when-downgrade" />
    
    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
    
    <!-- Additional head content from pages -->
    <slot name="head" />
    <style>
        .nav-link {
            @apply px-4 py-2 transition-colors text-skill-wanderer-text-dark-secondary;
        }
        .nav-link:hover {
            @apply text-skill-wanderer-primary-orange;
        }
        .btn-primary {
            @apply font-semibold py-2 px-6 rounded-lg transition-colors bg-skill-wanderer-primary-orange text-skill-wanderer-text-dark;
        }
        .btn-primary:hover {
            @apply bg-skill-wanderer-light-orange;
        }
        .prose {
            @apply max-w-none;
        }
        .prose h1 {
            @apply text-skill-wanderer-article-headings;
        }
        .prose h2 {
            @apply text-skill-wanderer-article-headings;
        }
        .prose h3 {
            @apply text-skill-wanderer-article-headings;
        }
        .prose h4 {
            @apply text-skill-wanderer-article-headings;
        }
        .prose p {
            @apply text-skill-wanderer-article-text;
        }
        .prose pre {
            @apply bg-skill-wanderer-code-bg;
        }
        .prose code {
            @apply text-skill-wanderer-code-text;
        }
        .prose blockquote {
            @apply bg-skill-wanderer-blockquote-bg border-l-4 border-skill-wanderer-primary-orange text-skill-wanderer-blockquote-text italic;
        }
        .prose a {
            @apply text-skill-wanderer-primary-orange hover:text-skill-wanderer-orange-hover transition-colors;
        }
    </style>
</head>
<body class="min-h-screen bg-skill-wanderer-article-bg">
    <!-- Header -->
    <Header />    <!-- Main Content -->
    <main>
        <slot />
    </main>

    <!-- Footer -->
    <Footer />
</body>
</html>
